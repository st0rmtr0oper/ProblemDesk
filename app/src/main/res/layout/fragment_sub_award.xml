<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <View style="@style/dividerStyle" />

    <TextView
        android:id="@+id/award_header_label"
        style="@style/headerTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_sub_award_header_label" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/award_tokens"
            style="@style/infoDataTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/award_tokens_label"
            style="@style/infoLabelTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_sub_award_earned_tokens_label" />

        <TextView
            android:id="@+id/award_created_requests"
            style="@style/infoDataTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/award_created_requests_label"
            style="@style/infoLabelTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_sub_created_requests_label" />

        <TextView
            android:id="@+id/award_completed_requests"
            style="@style/infoDataTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/award_completed_requests_label"
            style="@style/infoLabelTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_sub_completed_requests_label" />

        <TextView
            android:id="@+id/award_last_completed_date"
            style="@style/infoDataTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/award_last_completed_date_label"
            style="@style/infoLabelTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_sub_last_completed_date_label" />


    </LinearLayout>

</LinearLayout>
